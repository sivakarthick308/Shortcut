<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sivak.shortcut.Main4Activity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:text="Enter the number"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="28dp"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="4" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text"
        android:layout_alignBottom="@+id/text"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/text"
        android:text="FInd"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step-1"
        android:textSize="25dp"
        android:layout_below="@+id/text"
        android:layout_alignStart="@+id/text1" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button9"
        android:layout_marginStart="14dp"
        android:layout_marginTop="52dp"
        android:text="("
        android:textSize="40dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/text1"
        android:layout_alignBottom="@+id/text1"
        android:layout_toEndOf="@+id/text1"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/text2"
        android:layout_alignBottom="@+id/text2"
        android:layout_toEndOf="@+id/text2"
        android:text="+"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/text3"
        android:layout_alignBottom="@+id/text3"
        android:layout_toEndOf="@+id/text3"
        android:text="1"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/text4"
        android:layout_alignBottom="@+id/text4"
        android:layout_toEndOf="@+id/text4"
        android:text=")"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/Text6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/text5"
        android:layout_alignBottom="@+id/text5"
        android:layout_toEndOf="@+id/text5"
        android:text="*"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/text7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/Text6"
        android:layout_alignBottom="@+id/Text6"
        android:layout_toEndOf="@+id/button9"
        android:textSize="25dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/text1"
        android:id="@+id/text11"
        android:layout_marginTop="26dp"
        android:layout_toStartOf="@+id/text5"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text1"
        android:layout_below="@+id/text1"
        android:layout_marginTop="81dp"
        android:text="Step-2"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:text="5"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView6"
        android:layout_toEndOf="@+id/textView7"
        android:text="*"
        android:textSize="40dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:text="5"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="17dp"
        android:text="25"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="19dp"
        android:text="Result : "
        android:textSize="30dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="40dp"
        android:id="@+id/text12"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignEnd="@+id/text7"
        android:layout_marginEnd="18dp" />


</RelativeLayout>
