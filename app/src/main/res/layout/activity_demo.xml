<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sivak.shortcut.Demo">
    <EditText
        android:id="@+id/editText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:digits="0123456789."
        android:hint="First Number"
        android:inputType="numberDecimal"
        android:maxLength="2"
        android:layout_marginEnd="11dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button7" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:maxLength="2"
        android:digits="0123456789."
        android:hint="Second Number"
        android:inputType="numberDecimal"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="Find"
        android:textAlignment="center"
        android:id="@+id/button7"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textSize="25dp"
        android:layout_below="@+id/button7"
        android:layout_alignStart="@+id/text" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textSize="40dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/button7"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="41dp" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:textSize="40dp"
        android:layout_below="@+id/text3"
        android:layout_alignStart="@+id/text"
        android:layout_marginTop="13dp" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:textSize="40dp"
        android:layout_alignBaseline="@+id/text"
        android:layout_alignBottom="@+id/text"
        android:layout_toEndOf="@+id/text"
        android:layout_marginStart="31dp" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/text4"
        android:textSize="40dp"
        android:layout_alignBaseline="@+id/text2"
        android:layout_alignBottom="@+id/text2"
        android:layout_alignStart="@+id/text3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step-1"
        android:textSize="20dp"
        android:layout_above="@+id/text5"
        android:layout_toEndOf="@+id/button7" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/text5"
        android:textSize="40dp"
        android:layout_alignBaseline="@+id/text3"
        android:layout_alignBottom="@+id/text3"
        android:layout_toEndOf="@+id/button7" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step-2"
        android:textSize="20dp"
        android:id="@+id/textView"
        android:layout_alignStart="@+id/text5"
        android:layout_alignTop="@+id/text4" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/text6"
        android:textSize="40dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="11dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step-3"
        android:textSize="20dp"
        android:layout_below="@+id/text6"
        android:layout_alignStart="@+id/text6"
        android:layout_marginTop="10dp"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/text7"
        android:textSize="40dp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/text6"
        android:layout_alignStart="@+id/text6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toStartOf="@+id/text4"
        android:layout_marginBottom="15dp"
        android:id="@+id/textView3" />\
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/text8"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignEnd="@+id/text4" />

</RelativeLayout>
